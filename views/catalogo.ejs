<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Catálogo de Productos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <header class="bg-light py-3 mb-4 border-bottom">
    <div class="container d-flex justify-content-between">
      <h1 class="h4">Catálogo de Productos</h1>
      <a href="/" class="btn btn-secondary">Volver al inicio</a>
    </div>
  </header>

  <main class="container">
    <!-- Filtro -->
    <form class="row g-3 mb-4" method="GET" action="/catalogo">
      <div class="col-md-2">
        <label class="form-label">Marca</label>
        <select name="marca" class="form-select">
          <option value="">Todas</option>
          <% marcas.forEach(m => { %>
            <option value="<%= m.nombre %>"><%= m.nombre %></option>
          <% }) %>
        </select>
      </div>
      <!-- Agregar más filtros aquí según sea necesario -->
      <div class="col-12 text-end">
        <button type="submit" class="btn btn-primary">Filtrar</button>
      </div>
    </form>

    <!-- Tabla de productos -->
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Marca</th>
          <th>Categoría</th>
          <th>Talla</th>
          <th>Color</th>
          <th>Precio</th>
          <th>Stock</th>
        </tr>
      </thead>
      <tbody>
        <% if (productos.length > 0) { %>
          <% productos.forEach(p => { %>
            <tr>
              <td><%= p.nombre %></td>
              <td><%= p.marca %></td>
              <td><%= p.categoria %></td>
              <td><%= p.talla %></td>
              <td><%= p.color %></td>
              <td>S/ <%= p.precio.toFixed(2) %></td>
              <td><%= p.stock %></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="7" class="text-center">No se encontraron productos.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
